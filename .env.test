# Test Environment Configuration
# This file is used when running tests to avoid conflicts with development database

ENVIRONMENT=testing

# Test Database Configuration
# Uses a separate test database to avoid data conflicts
DATABASE_URL=postgresql://erp_admin:erp_secure_password_change_in_production@localhost:5432/erp_test
DATABASE_MAX_CONNECTIONS=5
DATABASE_MIN_CONNECTIONS=1

# Test Redis Configuration
REDIS_URL=redis://:redis_secure_password_change_in_production@localhost:6379/1

# JWT Configuration for Tests
JWT_SECRET=test-jwt-secret-key-for-testing-only-32-chars-minimum
JWT_ACCESS_TOKEN_EXPIRY=3600
JWT_REFRESH_TOKEN_EXPIRY=86400

# Security Configuration for Tests
AES_ENCRYPTION_KEY=test-encryption-key-exactly-32-ch
ARGON2_MEMORY_COST=16384
ARGON2_TIME_COST=2
ARGON2_PARALLELISM=1

# CORS Configuration for Tests
CORS_ALLOWED_ORIGINS=http://localhost:3000
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=authorization,content-type,x-request-id
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=3600

# Email Configuration for Tests (Mock)
EMAIL_PROVIDER=mock

# Rate Limiting for Tests
RATE_LIMIT_REQUESTS_PER_MINUTE=1000
RATE_LIMIT_BURST_SIZE=100

# Application Settings for Tests
APP_COMPANY_NAME=Test Company
APP_BASE_URL=http://localhost:3000
APP_ENABLE_REGISTRATION=true
APP_ENABLE_2FA=true
APP_ENABLE_EMAIL_VERIFICATION=true

# Logging Configuration for Tests
LOG_LEVEL=debug
RUST_LOG=debug,erp_auth=debug,erp_core=debug,erp_api=debug

# Test-specific settings
DEBUG_MODE=true
SQLX_LOGGING=false
HTTP_LOGGING=false